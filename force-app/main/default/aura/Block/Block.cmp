<aura:component implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="label" type="String" />
    <aura:attribute name="open" type="Boolean" default="false"/>

    <ltng:require
    scripts="{!$Resource.FitText}"
    afterScriptsLoaded="{!c.scriptsLoaded}" />

    <aura:registerEvent name="onclick" type="c:BlockClickEvent"/>

    <!-- Block tile component -->
    <div class="board-block slds-align--absolute-center slds-var-p-around_medium" onclick="{!c.blockClickHandler}">
        <div>
            <aura:if isTrue="{!v.open}">
                <div>{!v.label}</div>
            </aura:if>
        </div>
    </div>
</aura:component>	
